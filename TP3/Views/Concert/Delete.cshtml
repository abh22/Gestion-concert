@model Concert

<h1>Delete Concert</h1>

<h3>Are you sure you want to delete this concert?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Artist</dt>
        <dd class="col-sm-10">@Model.Artist</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">@Model.StartTime.ToString("hh\\:mm")</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
